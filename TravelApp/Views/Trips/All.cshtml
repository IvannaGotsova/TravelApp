@model IEnumerable<AllTripsModel>

@{
    ViewBag.Title = "All My Trips";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<a class="btn btn-warning" asp-controller="Trips" asp-action="Add"       
   sp-route-information="" class="btn btn-success">Add new Trip</a>
<hr />

<div class="text-center row">
    @if (Model.Count() > 0)
    {
        @foreach (var trip in Model)
        {
            <div class="card col-4" style="width: 20rem; ">
                <div class="card-body">

                    <h5 class="card-title mt-1">@trip.Title</h5>
                    <p class="mb-0">Journey Name: @trip.JourneyName</p>
                </div>
                @if (this.User?.Identity?.IsAuthenticated ?? false)
                {
                    <a class="btn btn-warning" asp-controller="Trips" asp-action="Details" asp-route-id="@trip.Id"
                   asp-route-information="" class="btn btn-success">Details</a>
                }
            </div>
        }
    }
    else
    {
         <p class="mb-0">There are no trips yet!</p>
    }
</div>
