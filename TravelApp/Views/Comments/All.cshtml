@model IEnumerable<AllCommentsModel>

@{
    ViewBag.Title = "All Comments";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<a class="btn btn-warning" asp-controller="Comments" asp-action="Add"
   sp-route-information="" class="btn btn-success">Add new Comment</a>
<hr />

<div class="text-center row">
    @if (Model.Count()  > 0)
    {
        @foreach (var comment in Model)
        {
            <div class="card col-4" style="width: 20rem;">
                <div class="card-body">

                    <h5 class="card-title mt-1">@comment.Title</h5>
                    <p class="mb-0">Author: @comment.Author</p>
                </div>
                @if (this.User?.Identity?.IsAuthenticated ?? false)
                {
                    <a class="btn btn-warning" asp-controller="Comments" asp-action="Details" asp-route-id="@comment.Id"
                    asp-route-information="" class="btn btn-success">Details</a>
                }
            </div>
        }
    }
    else 
    {
        <p class="mb-0">There are no comments yet!</p>
    }
 
</div>
