@model DetailsCommentModel

@{
    ViewBag.Title = $"Comment - {Model.Title}";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
   <div class="card col-4" style="width: 20rem; ">
       <div class="card-body">
            <input type="hidden" asp-for="@Model.Id" />
          <h5 class="card-title mt-1">@Model.Title</h5>
          <p class="mb-0">Comment: @Model.Description</p>
          <p class="mb-0">Author: @Model.Author</p>
          @if (this.User?.Identity?.IsAuthenticated ?? false)
               {
                    @if (this.User.GetCurrentUserName() == Model.Author)
                    {
                        <a class="btn btn-warning" asp-controller="Comments" asp-action="Edit" asp-route-id="@Model.Id"
                   asp-route-information="" class="btn btn-success">Edit</a>
                   
                        <a class="btn btn-warning" asp-controller="Comments" asp-action="Delete" asp-route-id="@Model.Id"
                   asp-route-information="" class="btn btn-success">Delete</a>

                       
                    }

                <a class="btn btn-warning" asp-controller="Posts" asp-action="Details" asp-route-id="@Model.PostId"
               asp-route-information="" class="btn btn-success">View Post</a>
              }
       </div>
    </div>
</div>

