@model AddPostModel 

@{
    ViewBag.Title = "Add your new Post";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label">Post Title</label>
                <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.TripId" class="form-label">Trip Name</label>
                <select asp-for="@Model.TripId" class="form-control">
                    @foreach (var trip in Model.Trips)
                    {
                        <option value="@trip.Id">@trip.Title</option>
                    }
                </select>
                <span asp-validation-for="TripId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Image" class="form-label">Post Image </label>
                <input asp-for="@Model.Image" class="form-control" aria-required="true" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Post Description </label>
                <input asp-for="@Model.Description" class="form-control" aria-required="true" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}