@model AddJourneyModel

@{
    ViewBag.Title = "Admin Add Journey";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label">Name</label>
                <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Image" class="form-label">Image </label>
                <input asp-for="@Model.Image" class="form-control" aria-required="true" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
           
            <div class="mb-3">
                <label asp-for="@Model.CountryIds" class="form-label">Countries</label>
                <select multiple="multiple" class="multi-select" id="@Model.CountryIds" asp-for="@Model.CountryIds" asp-for="@Model.Countries" asp-items="ViewBag.Countries">
                    class="form-control">
                    @foreach (var country in Model.Countries)
                    {
                        <option value="@country.Id">@country.Name</option>
                    }
                </select>
                <span asp-validation-for="CountryIds" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.TownIds" class="form-label">Towns</label>
                <select multiple="multiple" class="multi-select" id="@Model.TownIds" asp-for="@Model.TownIds" asp-for="@Model.Towns" asp-items="ViewBag.Towns">
                    class="form-control">
                    @foreach (var town in @Model.Towns)
                    {
                        <option value="@town.Id">@town.Name</option>
                    }
                </select>
                <span asp-validation-for="TownIds" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Description</label>
                <input asp-for="@Model.Description" class="form-control" aria-required="true" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>     
    
            <div class="mb-3">
                <label asp-for="@Model.StartDate" class="form-label">Start Date</label>
                <input asp-for="@Model.StartDate" class="form-control" aria-required="true" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>     
            <div class="mb-3">
                <label asp-for="@Model.EndDate" class="form-label">End Date</label>
                <input asp-for="@Model.EndDate" class="form-control" aria-required="true" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Days" class="form-label">Days</label>
                <input asp-for="@Model.Days" class="form-control" aria-required="true" />
                <span asp-validation-for="Days" class="text-danger"></span>
            </div>     
            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label">Price</label>
                <input asp-for="@Model.Price" class="form-control" aria-required="true" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
             <div class="mb-3">
                <label asp-for="@Model.NumberOfPeople" class="form-label">Available</label>
                <input asp-for="@Model.NumberOfPeople" class="form-control" aria-required="true" />
                <span asp-validation-for="NumberOfPeople" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}