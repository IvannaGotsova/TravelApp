@model AddCountryModel 

@{
    ViewBag.Title = "Admin Add Country";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Country Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Image" class="form-label">Country Image</label>
                <input asp-for="@Model.Image" class="form-control" aria-required="true" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Country Description</label>
                <input asp-for="@Model.Description" class="form-control" value="" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
                       <div class="mb-3">
                <label asp-for="@Model.Population" class="form-label">Country Population</label>
                <input asp-for="@Model.Population" class="form-control" value="" />
                <span asp-validation-for="Population" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Area" class="form-label">Country Area</label>
                <input asp-for="@Model.Area" class="form-control" value="" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}